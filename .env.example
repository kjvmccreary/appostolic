# Database
POSTGRES_USER=appuser
POSTGRES_PASSWORD=apppassword
POSTGRES_DB=appdb
POSTGRES_PORT=55432
POSTGRES_HOST=localhost

# Redis
REDIS_HOST=localhost
REDIS_PORT=6380

# MinIO (S3-compatible)
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123
MINIO_ENDPOINT=http://localhost:9002
MINIO_CONSOLE=http://localhost:9003
MINIO_BUCKET=appostolic

# Mailhog (SMTP Testing)
MAILHOG_HOST=localhost
MAILHOG_SMTP_PORT=1025
MAILHOG_HTTP_PORT=8025

# Email (API Options)
# Provider can be 'smtp' (default in Development) or 'sendgrid'
Email__Provider=smtp
# Base URL used in email links (verification/invite). Keep in sync with web dev URL.
Email__WebBaseUrl=http://localhost:3000
# From defaults (can be overridden per environment)
Email__FromAddress=no-reply@appostolic.local
Email__FromName=Appostolic
# SMTP settings for local dev (Mailhog)
Smtp__Host=127.0.0.1
Smtp__Port=1025
# Optional SMTP auth (not required for Mailhog)
# Smtp__User=
# Smtp__Pass=
# SendGrid API key (do NOT commit real keys; prefer secret managers in CI/CD)
# SendGrid__ApiKey=

# Qdrant (Vector DB)
QDRANT_HOST=localhost
QDRANT_PORT=6334

# pgAdmin defaults
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin123
