<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- Emit XML documentation so Swagger can include <summary> comments -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <!-- Suppress missing XML comment warnings while we add docs incrementally -->
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Konscious.Security.Cryptography.Argon2" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" />
    <!-- Swagger -->
    <PackageReference Include="Swashbuckle.AspNetCore" />
    <!-- Templating -->
    <PackageReference Include="Scriban" />
  <!-- OpenTelemetry -->
  <PackageReference Include="OpenTelemetry.Extensions.Hosting" />
  <PackageReference Include="OpenTelemetry.Instrumentation.AspNetCore" />
  <PackageReference Include="OpenTelemetry.Instrumentation.Http" />
  <PackageReference Include="OpenTelemetry.Instrumentation.Runtime" />
  <PackageReference Include="OpenTelemetry.Exporter.Console" />
  <PackageReference Include="OpenTelemetry.Exporter.OpenTelemetryProtocol" />
  <PackageReference Include="StackExchange.Redis" />
  <PackageReference Include="AWSSDK.S3" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Migrations/20240911120000_Initial.cs" />
    <Compile Remove="tools/**" />
  </ItemGroup>
  <!-- Ensure denomination presets JSON is copied & embedded; avoid duplicate implicit include by using Update -->
  <ItemGroup>
    <Content Update="App/Data/denominations.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <EmbeddedResource Include="App/Data/denominations.json" />
  </ItemGroup>
</Project>
