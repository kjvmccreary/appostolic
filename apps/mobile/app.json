{
  "expo": {
    "name": "Appostolic",
    "slug": "appostolic",
    "scheme": "appostolic",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
