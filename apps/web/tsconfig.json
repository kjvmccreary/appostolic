{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@appostolic/sdk": ["../../packages/sdk/src"],
      "@appostolic/sdk/*": ["../../packages/sdk/src/*"],
      "@appostolic/models": ["../../packages/models/src"],
      "@appostolic/models/*": ["../../packages/models/src/*"],
      "@appostolic/ui": ["../../packages/ui/src"],
      "@appostolic/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "middleware.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "playwright.config.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules"]
}
